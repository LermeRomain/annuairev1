{% extends 'base.html.twig' %}

{% block title %}Modifier le Message{% endblock %}

{% block body %}
    {% include 'navbar.html.twig' %}
    <div class="container">
        <h1>Modifier le message</h1>

        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(form, {'attr': {'class': 'form'}}) }}

                <div class="form-group">
                    {{ form_label(form.content, 'Contenu') }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.contact, 'Contact') }}
                    {{ form_widget(form.contact, {'attr': {'class': 'form-control'}}) }}
                </div>

                <button type="submit" class="btn btn-primary mt-2">Mettre à jour</button>

                {{ form_end(form) }}
            </div>
        </div>

        <a href="{{ path('app_messages_index') }}" class="btn btn-secondary">Retour à la liste</a>
        {% if is_granted('ROLE_ADMIN') %}
        {{ include('messages/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}
